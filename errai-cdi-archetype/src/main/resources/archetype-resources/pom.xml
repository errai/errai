								<copy file="src/${webDescriptor}/web.xml" toDir="war/WEB-INF" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
