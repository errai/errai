      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <argLine>-d32 -XX:CompileThreshold=1000</argLine>
      </properties>
    </profile>

    <profile>
      <id>integration-test</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <skipTests>false</skipTests>
            </configuration>
          </plugin>
        </plugins>
      </build>
