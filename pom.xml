              </includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

      <!-- http://maven.apache.org/plugins/maven-enforcer-plugin/plugin-info.html -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>1.2</version>
        <executions>
          <execution>
